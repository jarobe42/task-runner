{
  "name": "jarobe42/task-runner",
  "description": "A library for running tasks",
  "keywords": [],
  "license": "MIT",
  "authors": [
    {
      "name": "Jim Robertson",
      "email": "jim@jarobe.com"
    }
  ],
  "require": {
    "php": "^5.6.0|>=7.0.8",
    "doctrine/orm": "^2.5",
    "symfony/framework-bundle": "^2.8|^3.1",
    "symfony/validator": "~2.8|~3.1",
    "doctrine/doctrine-bundle": "^1.6",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "sllh/php-cs-fixer-styleci-bridge": "^2.1.1"
  },
  "suggest": {
  },
  "autoload": {
    "psr-4": {
      "Jarobe\\TaskRunner\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Jarobe\\TaskRunner\\": "Tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ],
    "test-ci": [
      "vendor/bin/phpunit --coverage-text --coverage-clover=build/unit_coverage.xml"
    ]
  }
}
